mixin hotelForm(hotel={})

    form(action="" method="POST" enctype="multipart/form-data")
        .form_input
            label(for="hotel_name") Hotel name:
            input(type="text" name="hotel_name" id="hotel_name" value=hotel.hotel_name required)
        .form_input
            label(for="hotel_description") Hotel description:
            textarea(name="hotel_description" id="hotel_description" cols="30" rows="10" required)=hotel.hotel_description
        .form_input
            label(for="image") Hotel image:
            input(type="file" name="image" id="image")
        .form_input
            label(for="star_rating") Star rating:
            input(type="number" name="star_rating" id="star_rating" min="1" max="5" value=hotel.star_rating required)
        .form_input
            label(for="country") Country:
            input(type="text" name="country" id="country" value=hotel.country required)
        .form_input
            label(for="cost_per_night") Cost per night:
            input(type="number" name="cost_per_night" id="cost_per_night" min="1" value=hotel.cost_per_night required)
        .form_input
            label(for="available") Available:
            input(type="radio" name="available" id="available" value="true" checked)
            label(for="unavailable") Unavailable:
            input(type="radio" name="available" id="unavailable" value="false")
        .form_input
            button(type="submit" class="button_small") Confirm
